<Window x:Class="Lesson_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListView x:Name="lvDepNames" Margin="10,10,307,10" VerticalAlignment="Top"  Height="309" Width="200" 
                  SelectionChanged="lvDepNames_SelectionChanged"/>
        <Button Margin="0,0,20,20" Height="50" Width="151" VerticalAlignment="Bottom" HorizontalAlignment="Right"  
                Click="btnAddDepartment">Добавить отдел из файла</Button>

        <Label TextBlock.TextAlignment="Left" Margin="0,0,101,111" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="23" Width="70"
               Content="Имя файла"/>
        <TextBox AcceptsReturn="True" x:Name="tbFileName" Margin="0,0,20,83" HorizontalAlignment="Right" VerticalAlignment="Bottom" TextWrapping="NoWrap" 
                 Text="Department4.txt" Height="23" Width="151"/>
    </Grid>
</Window>
