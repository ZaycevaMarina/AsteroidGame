<Window x:Class="Lesson_5.LBDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_5"
        mc:Ignorable="d"
        Title="Отдел" Height="450" Width="800">
    <Grid>
        <ListBox Margin="10" Name="lbEmployee" SelectionMode="Single" 
                 SelectionChanged="lbEmployee_SelectionChanged" VerticalAlignment="Top" Height="250"></ListBox>

        <Button Margin="10" Height="25" Width="70" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                Click="btnRemoveEmployee">Удалить</Button>
        <Button Margin="10" Height="25" Width="70" VerticalAlignment="Bottom" HorizontalAlignment="Right"  
                Click="btnAddEmployee">Добавить</Button>
        <TextBox AcceptsReturn="True" x:Name="tbName" Margin="90" HorizontalAlignment="Right" VerticalAlignment="Bottom" TextWrapping="NoWrap" Text="Имя"/>
        <TextBox AcceptsReturn="True" x:Name="tbAge" Margin="70" HorizontalAlignment="Right" VerticalAlignment="Bottom" TextWrapping="NoWrap" Text="Возраст"/>
        <TextBox AcceptsReturn="True" x:Name="tbSalary" Margin="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" TextWrapping="NoWrap" Text="Зарплата"/>

    </Grid>
</Window>
